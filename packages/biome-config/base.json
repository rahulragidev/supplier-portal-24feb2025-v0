{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "noNonNullAssertion": "error"
      },
      "complexity": {
        "noUselessSwitchCase": "error",
        "useOptionalChain": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "error",
        "useMediaCaption": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": ["**/node_modules/**", "**/dist/**", "**/.turbo/**"]
  }
}
