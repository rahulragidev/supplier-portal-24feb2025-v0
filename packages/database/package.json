{
  "name": "@workspace/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./types.ts",
      "import": "./index.js"
    },
    "./server": {
      "types": "./server.ts",
      "import": "./server.js"
    },
    "./types": {
      "types": "./types.ts",
      "import": "./types.js"
    },
    "./schema": {
      "types": "./schema.ts",
      "import": "./schema.js"
    },
    "./zod-schema": {
      "types": "./zod-schema.ts",
      "import": "./zod-schema.js"
    },
    "./enums": {
      "types": "./enums.ts",
      "import": "./enums.js"
    },
    "./examples": {
      "types": "./examples.ts",
      "import": "./examples.js"
    }
  },
  "scripts": {
    "lint": "biome check .",
    "format": "biome format --write .",
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:prepare": "node -e \"const fs = require('fs'); const content = fs.readFileSync('./enums.ts', 'utf8').replace(/export const/g, 'exports.').replace(/ as const;/g, ';'); fs.writeFileSync('./enums.js', content);\"",
    "db:generate:safe": "npm run db:prepare && npm run db:generate",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "@workspace/biome-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "^0.30.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "drizzle-zod": "^0.7.0",
    "pg": "^8.14.0",
    "zod": "^3.24.2"
  }
}
