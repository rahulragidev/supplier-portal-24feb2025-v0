{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend API: debug server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/apps/backend-api/node_modules/.bin/tsx",
      "runtimeArgs": ["watch", "src/index.ts"],
      "cwd": "${workspaceFolder}/apps/backend-api",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/backend-api/**",
        "${workspaceFolder}/packages/**",
        "!**/node_modules/**"
      ],
      "env": {
        "PORT": "3030",
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm --filter web dev",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "PORT": "3001"
      }
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/apps/web",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${webRoot}/*",
        "webpack://web/*": "${webRoot}/*"
      }
    },
    {
      "name": "Next.js: debug client-side (Firefox)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3001",
      "reAttach": true,
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}/apps/web"
        },
        {
          "url": "webpack://web",
          "path": "${workspaceFolder}/apps/web"
        }
      ]
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm --filter web dev",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/web/**",
        "${workspaceFolder}/packages/**",
        "!**/node_modules/**"
      ],
      "env": {
        "PORT": "3001",
        "NODE_OPTIONS": "--inspect"
      },
      "serverReadyAction": {
        "pattern": "ready started server on.+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
